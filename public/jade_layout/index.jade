              ul.nav.navbar-nav
                li
                  a(href='#' ng-click="signin()")
                    | Sign-in
                    span.sr-only (current)
                |         
                li
                  a(href='#' ng-click="signup()") Sign-up
                |         
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | Interests
                    span.caret
                  |           
                  ul.dropdown-menu
                    li
                      a(href='#') Action
